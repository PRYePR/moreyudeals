{
  "kind": "collectionType",
  "collectionName": "deals",
  "info": {
    "singularName": "deal",
    "pluralName": "deals",
    "displayName": "Deal",
    "description": "Deals and discounts from various sources"
  },
  "options": {
    "draftAndPublish": true,
    "comment": ""
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "originalTitle": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "translatedTitle": {
      "type": "string",
      "required": false,
      "maxLength": 255
    },
    "description": {
      "type": "text",
      "required": false
    },
    "originalDescription": {
      "type": "text",
      "required": false
    },
    "translatedDescription": {
      "type": "text",
      "required": false
    },
    "price": {
      "type": "decimal",
      "required": false
    },
    "originalPrice": {
      "type": "decimal",
      "required": false
    },
    "currency": {
      "type": "string",
      "required": true,
      "default": "EUR",
      "maxLength": 3
    },
    "discountPercentage": {
      "type": "integer",
      "required": false,
      "min": 0,
      "max": 100
    },
    "imageUrl": {
      "type": "string",
      "required": false
    },
    "dealUrl": {
      "type": "string",
      "required": true
    },
    "category": {
      "type": "string",
      "required": false,
      "maxLength": 100
    },
    "categories": {
      "type": "json",
      "required": false
    },
    "source": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "language": {
      "type": "enumeration",
      "enum": ["de", "en"],
      "default": "de",
      "required": true
    },
    "translationProvider": {
      "type": "enumeration",
      "enum": ["deepl", "microsoft", "google", "none"],
      "default": "none",
      "required": false
    },
    "isTranslated": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "expiresAt": {
      "type": "datetime",
      "required": false
    },
    "content": {
      "type": "text",
      "required": false
    },
    "isExpired": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "daysRemaining": {
      "type": "integer",
      "required": false
    }
  }
}