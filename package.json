{
  "name": "moreyudeals",
  "version": "1.0.0",
  "description": "Moreyu Deals - German Deal Aggregation Platform",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"yarn dev:api\" \"yarn dev:web\" \"yarn dev:worker\"",
    "dev:api": "yarn workspace @moreyudeals/api dev",
    "dev:web": "yarn workspace @moreyudeals/web dev",
    "dev:worker": "yarn workspace @moreyudeals/worker dev",
    "build": "yarn workspace @moreyudeals/web build",
    "build:web": "yarn workspace @moreyudeals/web build",
    "build:api": "yarn workspace @moreyudeals/api build",
    "build:worker": "yarn workspace @moreyudeals/worker build",
    "test": "yarn workspaces run test",
    "lint": "yarn workspaces run lint",
    "lint:fix": "yarn workspaces run lint:fix"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}